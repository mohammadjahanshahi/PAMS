@model BSIActivityManagement.ViewModel.QualityRuleIndexViewModel
@{
    ViewBag.Title = "مشاهده قوانین یک فعالیت";
    Layout = "~/Views/Shared/_PersianLayoutLogout.cshtml";
}

<hr />
<h2 id="QualityIndex" class="text-center BTitrBold TitrShadow">قوانین کیفیت برای یک فعالیت</h2>
<hr />
<div class="row rowLink">
    <div class="col-center-content">
        <div class="panel panel-default LinkPanel box-btn-shadow BTitrBold FontKoochik">
            <div class="panel-body LinkPanelBody">
                <img src="@Url.Action("GetImage","Home",new { Id = Model.Activity.Type.ImageId })" />
            </div>
            <div class="panel-footer text-center">
                @Model.Activity.Name
            </div>
        </div>
    </div>
</div>
<hr />
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <td>
                    شماره ارجاع
                </td>
                <td>
                    عنوان شاخص
                </td>
                <td>
                    حذف
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.RuleList)
            {
                <tr>
                    <td>
                        @r.Id
                    </td>
                    <td>
                        @r.Index.Title
                    </td>
                    <td>
                        <a class="transition" href="@Url.Action("Delete","QualityRule",new {Id = r.Id, ActivityId = Model.Activity.Id, ProcessId = Model.ProcessId })"><i class="fa fa-trash-o fa-fw fa-2x"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a class="btn btn-default" href="@Url.Action("ShowActivity", "Sysadmin", new { ActivityId = Model.Activity.Id, ProcessId = Model.ProcessId })">بازگشت</a>
</div>