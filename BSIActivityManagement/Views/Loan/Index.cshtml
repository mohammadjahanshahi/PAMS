<script>
    function ConfirmPayment(id)
    {
        $.ajax({
            type: "POST",
            url: '@Url.Action("ConfirmInst","Loan")',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ InstallmentId: id }),
            dataType: "json",
            success: function (result) {
                $.each(result, function (index, item) {
                    $('#' + 'Installment-Status-' + item).html('پرداخت شده');
                    $('#' + 'header-installment-' + item).text('پرداخت شده');
                    var bt = document.getElementById('confirm-btn-' + item);
                    bt.textContent = "لغو پرداخت";
                    bt.className = "btn btn-default";
                    bt.onclick = function () { UnConfirmPayment(item); };
                    $('#' + 'collapse-heading-' + item).css('background-color', 'lightgreen');
                });
            },
            error: errorFunc
        });

    }


    function UnConfirmPayment(id) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("UnConfirmInst","Loan")',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ InstallmentId: id }),
            dataType: "json",
            success: function (result) {
                $.each(result, function (index, item) {
                    $('#' + 'Installment-Status-' + item).html('پرداخت نشده');
                    $('#' + 'header-installment-' + item).text('پرداخت نشده');
                    var bt = document.getElementById('confirm-btn-' + item);
                    bt.textContent = "تایید پرداخت";
                    bt.className = "btn btn-info";
                    bt.onclick = function () { ConfirmPayment(item); };
                    item & 1 ? $('#' + 'collapse-heading-' + item).css('background-color', 'white') : $('#' + 'collapse-heading-' + item).css('background-color', '#f5f5f5');
                });
            },
            error: function(){alert("عملیات ناموفق بود. لطفا توجه کنید لغو پرداخت اقساط فقط توسط رییس امکان پذیر است.")}
        });

    }


    function UpdateLoan(id)
    {
        var tbody = document.getElementById('tbody-update-log');
        $.ajax({
            type: "POST",
            url: '@Url.Action("UpdateLoan","Loan")',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ LoanId: id }),
            dataType: "json",
            success: function (res) {
                if(res.Id != 0){
                    var trtbody = document.createElement('tr');
                    var s = '<td>' + res.FirstName + '</td><td>' + res.LastName + '</td><td>' + res.ElapsedTime + '</td><td> پایان بررسی </td>';
                    trtbody.innerHTML = s;
                    tbody.appendChild(trtbody);
                    var bt = document.getElementById('update-loan-btn');
                    bt.textContent = "ثبت شد";
                    bt.className = "btn btn-success";
                    bt.onclick = function () {  };
                } else
                {
                    alert(res.Message);
                }
            },
            error: errorFunc
        });

    }

    function StartFollowUp(id) {
        var tbody = document.getElementById('tbody-update-log');
        $.ajax({
            type: "POST",
            url: '@Url.Action("StartFollowUp","Loan")',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ LoanId: id }),
            dataType: "json",
            success: function (res) {
                if (res.Id != 0) {
                    var trtbody = document.createElement('tr');
                    var s = '<td>' + res.FirstName + '</td><td>' + res.LastName + '</td><td>' + res.ElapsedTime + '</td><td> شروع بررسی </td>';
                    trtbody.innerHTML = s;
                    tbody.appendChild(trtbody);
                    var bt = document.getElementById('start-followup-btn');
                    bt.textContent = "شروع پیگیری";
                    bt.className = "btn btn-success";
                    bt.onclick = function () { };
                } else {
                    alert(res.Message);
                }
            },
            error: errorFunc
        });

    }

    function errorFunc(){
        alert('متاسفانه عملیات انجام نشد. لطفا بعدا دوباره تلاش نمایید');
    }

    function RegisterReferee(id)
    {
        var tbodyr = document.getElementById('table-body-referee');
        $.ajax({
            type: "POST",
            url: '@Url.Action("RegisterReferee", "Loan")',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ LoanId: id, CustomerNumber: $('#Referee-CustomerNumber-Input').val(), Description: $('#Referee-Description-Input').val() }),
            dataType: "json",
            success: function (res) {
                alert(res.Message);
                if(res.Id != 0){
                $('#Referee-CustomerNumber-Input').val('');
                $('#Referee-Description-Input').val('');
                var trtbody = document.createElement('tr');
                trtbody.id = 'row-referee-' + res.Id;
                var s = '<td><a class="btn btn-info" href="/Customer/Index?UnitId=@Html.Raw(UPAObj.Unit.Id)&ProcessId=@Html.Raw(UPAObj.Process.Id)&ActivityId=@Html.Raw(UPAObj.Activity.Id)&CustomerId=' + res.CustomerId + '">' + res.CustomerNumber + '</a></td><td>' + res.FirstName + '</td><td>' + res.LastName + '</td><td>' + res.Description + '</td><td><a href="#!" onclick="RemoveReferee(' + res.Id + ')" id="Remove-Referee-Btn-'+res.Id+'" class="btn btn-danger"><i class="fa fa-remove"></i></a></td>';
                trtbody.innerHTML = s;
                tbodyr.appendChild(trtbody);
                }
            },
            error: errorFunc
        });
    }

    function RemoveReferee(id)
    {
        var RefereeRow = document.getElementById('row-referee-' + id);
        $.ajax({
            type: "POST",
            url: '@Url.Action("RemoveReferee", "Loan")',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ RefereeId: id }),
            dataType: "json",
            success: function (res) {
                alert(res.Message);
                if (res.Id != 0) {
                    RefereeRow.remove();
                }
            },
            error: errorFunc
        });


    }

    function RegisterNotification(id)
    {
        $.ajax({
            type: "POST",
            url: '@Url.Action("RegisterInstallmentNotification", "Loan")',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ InstallmentId: id, NotificationDays: $('#' + 'Notification-Input-' + id).val(), NotificationDescription:$('#' + 'Notification-Description-Input-' + id).val()  }),
            dataType: "json",
            success: function (message) {
                alert(message);
                $('#' + 'Notification-Input-' + id).val('');
                $('#' + 'Notification-Description-Input-' + id).val('');
            },
            error: errorFunc
        });
    }
    function errorFunc(){
        alert('متاسفانه عملیات انجام نشد. لطفا بعدا دوباره تلاش نمایید');
    }

    function RegisterCallNotification(id) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("RegisterCallNotification", "Loan")',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ CallId: id, NotificationDays: $('#' + 'Call-Notification-Input-' + id).val(), NotificationDescription: $('#' + 'Call-Notification-Description-Input-' + id).val() }),
            dataType: "json",
            success: function (message) {
                alert(message);
                $('#' + 'Call-Notification-Input-' + id).val('');
                $('#' + 'Call-Notification-Description-Input-' + id).val('');
            },
            error: errorFunc
        });
    }
    function errorFunc() {
        alert('متاسفانه عملیات انجام نشد. لطفا بعدا دوباره تلاش نمایید');
    }

    function RegisterCall(id)
    {
        $.ajax({
            type: "POST",
            url: '@Url.Action("RegisterCall","Loan")',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ InstallmentId: id, CallDescription: $('#' + 'Call-Description-Input-' + id).val(), AddressId: $('#' + 'Call-Address-Input-' + id).val() }),
            dataType: "json",
            success: function (result) {
                alert(result.message);
                $('#' + 'Call-Description-Input-' + id).val('');
                addcalltotable(result.Id, id);
            },
            error: errorFunc
        });
    }

    function NotificationSeen(id) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("SetNotificationSeen","Loan")',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ NotificationId: id }),
            dataType: "json",
            success: function (res) {
                alert(res);
                $("#" + "btn-notification-seen-" + id).addClass('disabled').text('اقدام شد');
            },
            error: errorFunc
        });
    }

    function addcalltotable(id, instid)
    {
        var tbody = document.getElementById('table-body-inst-' + instid);
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetInfoOfRegisteredCall","Loan")',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ CallId: id }),
            dataType: "json",
            success: function (res) {
                var trtbody = document.createElement('tr');
                var s = '<td>' + res.Name + '</td><td>' + res.CallTime + '</td><td>' + res.Description + '</td><td>' + res.PhoneNumber + '</td>';
                trtbody.innerHTML = s;
                tbody.appendChild(trtbody);
            },
                error: errorFunc
            });
    }

    function errorFunc(){
        alert('متاسفانه عملیات انجام نشد. لطفا بعدا دوباره تلاش نمایید');
    }

