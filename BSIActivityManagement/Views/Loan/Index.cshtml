</div>

@using (Html.BeginForm("Index"))
{
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.LoanNumber, htmlAttributes: new { @class = "control-label col-md-2", @style = "margin-bottom:5px;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LoanNumber, new { htmlAttributes = new { @class = "form-control", type = "number", dir = "ltr", @style = "display:inline;margin-bottom:5px;" } }) 
                <input type="submit" value="مشاهده" class="btn btn-default BTitrBold FontKoochik box-btn-shadow" style="margin-bottom:5px;"/> | <a href="@Url.Action("Index", "InstallmentsFollowUp", new { UnitId = UPAObj.Unit.Id, ProcessId = UPAObj.Process.Id, ActivityId = UPAObj.Activity.Id})" class="btn btn-default BTitrBold FontKoochik box-btn-shadow transition" style="margin-bottom:5px;">بازگشت</a>
                @Html.ValidationMessageFor(model => model.LoanNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.Hidden("UnitId", UPAObj.Unit.Id)
        @Html.Hidden("ProcessId", UPAObj.Process.Id)
        @Html.Hidden("ActivityId", UPAObj.Activity.Id)
    </div>
}
<hr />

@if (Model != null && Model.Id != 0)
{
    <h2 class="BTitrBold TitrShadow fontkheilibozorg text-center">
        لیست پیگیریهای قبلی
    </h2>
    <hr />
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    نام کاربر
                </th>
                <th>
                    نام خانوادگی
                </th>
                <th>
                    زمان عملیات
                </th>
                <th>
                    نوع عملیات
                </th>
            </tr>
        </thead>
        <tbody id="tbody-update-log">
            @foreach (var log in Model.UpdateList)
            {
                <tr>
                    <td>
                        @log.User.FirstName
                    </td>
                    <td>
                        @log.User.Lastname
                    </td>
                    <td>
                        @BSIActivityManagement.Extensions.DisplayExtension.ElapsedTime(log.UpdateTime)
                    </td>
                    <td>
                        @if (log.Status == BSIActivityManagement.Enum.UpdateLoanStatus.UnderProcess)
                        {
                            <span>شروع پیگیری</span>
                        }
                        else if (log.Status == BSIActivityManagement.Enum.UpdateLoanStatus.ProcessCompleted)
                        {
                            <span>پایان پیگیری</span>
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <hr />
    <div class="text-center">
        <a class="btn btn-default" href="#!" id="start-followup-btn" onclick="StartFollowUp(@Model.Id)"><i class="fa fa-check"></i>شروع پیگیری </a>
        <a class="btn btn-default" href="#!" id="update-loan-btn" onclick="UpdateLoan(@Model.Id)"><i class="fa fa-check"></i>پایان پیگیری </a>
    </div>
