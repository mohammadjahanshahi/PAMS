@model BSIActivityManagement.ViewModel.NewRevisionViewModel

@{
    ViewBag.Title = "ثبت اقدام اصلاحی";
    ViewBag.Nav = ViewBag.Navigation;
    Layout = "~/Views/Shared/_PersianLayoutLogin.cshtml";
}

<h2 class="text-center BTitrBold TitrShadow">اقدام اصلاحی جدید</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <div class="col-center-content">
            <div class="panel panel-default LinkPanel box-btn-shadow BTitrBold FontKoochik">
                <div class="panel-body LinkPanelBody">
                        <img class="Image-Link-250" src="@Url.Action("GetImage","Home",new {id= Model.Unit.Organization.ImageId})" />
                </div>
                    <div class="panel-footer text-center">
                        @Model.Unit.Name
                    </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="col-center-content">
            <div class="panel panel-default LinkPanel box-btn-shadow BTitrBold FontKoochik">
                <div class="panel-body LinkPanelBody">
                    <img class="Image-Link-250" src="@Url.Action("GetImage","Home",new {id= Model.Process.ProcessType.ImageId})" />
                </div>
                <div class="panel-footer text-center">
                    @Model.Process.Name
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="col-center-content">
            <div class="panel panel-default LinkPanel box-btn-shadow BTitrBold FontKoochik">
                <div class="panel-body LinkPanelBody">
                    <img class="Image-Link-250" src="@Url.Action("GetImage","Home",new {id= Model.Activity.Type.ImageId})" />
                </div>
                <div class="panel-footer text-center">
                    @Model.Activity.Name
                </div>
            </div>
        </div>
    </div>

</div>
<hr />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ConflictDescription, htmlAttributes: new { @class = "control-label col-md-2 BHamid FontBozorg" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ConflictDescription,  new { @class = "form-control form-control-max BNazanin FontBozorg" } )
                @Html.ValidationMessageFor(model => model.ConflictDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConflictSource, htmlAttributes: new { @class = "control-label col-md-2 BHamid FontBozorg" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ConflictSource, new { @class = "form-control form-control-max BNazanin FontBozorg" })
                @Html.ValidationMessageFor(model => model.ConflictSource, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConflictSolution, htmlAttributes: new { @class = "control-label col-md-2 BHamid FontBozorg" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ConflictSolution, new { @class = "form-control form-control-max BNazanin FontBozorg" })
                @Html.ValidationMessageFor(model => model.ConflictSolution, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.Hidden("ActivityId", Model.Activity.Id)
        @Html.Hidden("UnitId", Model.Unit.Id)
        @Html.Hidden("UserId", Model.User.Id)
        @Html.Hidden("ProcessId", Model.Process.Id)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-center">
                <input type="submit" value="ثبت اقدام اصلاحی" class="btn btn-default BTitrBold FontKoochik box-btn-shadow" /> | <a href="@Url.Action("ShowActivity","Main", new {UnitId = Model.Unit.Id, ProcessId = Model.Process.Id, ActivityId = Model.Activity.Id })" class="btn btn-default BTitrBold FontKoochik box-btn-shadow transition">انصراف</a>
            </div>
        </div>
    </div>
}