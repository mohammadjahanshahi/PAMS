@model IEnumerable<BSIActivityManagement.DAL.AMAccess>
@{
    ViewBag.Title = "اختصاص یک دسترسی کاربری";
    Layout = "~/Views/Shared/_PersianLayout.cshtml";
    BSIActivityManagement.DAL.AMUserType CurrentType = ViewBag.CurrentType;
}
<div class="row rowLink">
    <div class="col-center-content">
        <h2 id="AddUserType" class="text-center BTitrBold TitrShadow"> @ViewBag.Title @CurrentType.Name</h2>
        <hr />
        <div id="@Html.Raw("Type"+CurrentType.Id.ToString())" class="panel panel-default LinkPanel box-btn-shadow BTitrBold FontKoochik LinkPanelSelected BTitrTGEBold ">
            <div class="panel-body LinkPanelBody"><img class="Image-Link-250" src="@Url.Action("GetImage","Home",new { id = CurrentType.Image.Id})" /></div>
            <div class="panel-footer text-center">@CurrentType.Name</div>
        </div>

        <div class="panel panel-default LinkPanel box-btn-shadow BTitrBold FontKoochik LinkPanelSelected BTitrTGEBold ">
            <div class="panel-body LinkPanelBody"><img class="Image-Link-250" src="~/Image/LinkIcon.png" /></div>
        </div>

        <div class="panel panel-default LinkPanel box-btn-shadow BTitrBold FontKoochik LinkPanelSelected BTitrTGEBold ">
            <div class="panel-body LinkPanelBody"><img class="Image-Link-250" src="~/Image/Default.jpg" /></div>
            <div class="panel-footer text-center">
                @if (Model.Count() > 0)
            {@Html.Raw("انتخاب از بخش پایین") }
            else
            {@Html.Raw("تمامی مجوزها انتخاب شده است") }
            </div>
        </div>
    </div>
</div>
<hr />
<div class="row rowLink">
    <div class="col-center-content">
        @foreach (var ac in Model)
            {
            <div class="panel panel-default LinkPanel box-btn-shadow BTitrBold FontKoochik">
                <a class="transition" href="@Url.Action("Add","UserTypeAccess", new { TypeId = CurrentType.Id, AccessId = ac.Id })">
                    <span class="PanelLinkSpan"></span>
                </a>
                <div class="panel-body LinkPanelBody">
                    <img class="Image-Link-250" src="~/Image/AccessIcon.jpg" />
                </div>
                <div class="panel-footer text-center">@ac.Name</div>
            </div>
        }
    </div>
</div>
