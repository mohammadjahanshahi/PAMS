@model BSIActivityManagement.ViewModel.AddUserTypeManagerViewModel

@{
    ViewBag.Title = "تغییر نوع کاربری";
    Layout = "~/Views/Shared/_PersianLayout.cshtml";
}

<div class="row rowLink">
    <div class="col-center-content">
        <div id="@Html.Raw("type"+Model.Type.Id.ToString())" class="panel panel-default LinkPanel box-btn-shadow BTitrBold FontKoochik LinkPanelSelected BTitrTGEBold ">
            <div class="panel-body LinkPanelBody"><img class="Image-Link-250" src="@Url.Action("GetImage","Home",new { id = Model.Type.Image.Id})" /></div>
            <div class="panel-footer text-center">@Model.Type.Name</div>
        </div>

        <div class="panel panel-default LinkPanel BTitrBold FontKoochik LinkPanelSelected ">
            <div class="panel-body LinkPanelBody"><img class="Image-Link-250" src="~/Image/LinkIcon.png" /></div>
        </div>

        <div id="@Html.Raw("User"+Model.User.Id.ToString())" class="panel panel-default LinkPanel box-btn-shadow BTitrBold FontKoochik LinkPanelSelected BTitrTGEBold ">
            <div class="panel-body LinkPanelBody"><img class="Image-Link-250" src="@Url.Action("GetImage","Home",new { id = Model.User.Image.Id})" /></div>
            <div class="panel-footer text-center">@Model.User.FirstName @Model.User.Lastname</div>
        </div>
    </div>
</div>
<div class="row rowLink">
    <div class="col-center-content">
        @using (Html.BeginForm("AddInto","UserTypeManager"))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="col-md-offset-3 col-md-6">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-offset-3 col-md-6">
                    <p class="BMitra FontBozorg LineSpaceZiad LineTaraz">
                        آیا از تغییر نوع کاربری @Model.User.FirstName @Model.User.Lastname به @Model.Type.Name  اطمینان دارید؟
                    </p>
                </div>
            </div>
            @Html.Hidden("TypeId",Model.Type.Id)
            @Html.Hidden("UserId", Model.User.Id)
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12" style="text-align:center;">
                        <input type="submit" value="تایید" class="btn btn-default BTitrBold FontKoochik box-btn-shadow" /> | <a href="@Url.Action("Index","UnitManager")" class="btn btn-default BTitrBold FontKoochik box-btn-shadow transition">انصراف</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
