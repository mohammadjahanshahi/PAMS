@model BSIActivityManagement.ViewModel.RegisterActivityViewModel

@{
    ViewBag.Title = "ثبت اطلاعات یک فعالیت";
    Layout = "~/Views/Shared/_PersianLayoutLogin.cshtml";
    ViewBag.Nav = ViewBag.QualityNavigation;
}

<h2>ثبت اطلاعات یک فعالیت</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RuleId, "قانون کیفیت", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RuleId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RuleId, "", new { @class = "text-danger" })
            </div>
        </div>
        
        
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.ActivityData, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ActivityData, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ActivityData, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.UnitId)
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.ProcessId)
        @Html.HiddenFor(model => model.ActivityId)


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ایجاد" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a class="btn btn-default" href="@Url.Action("ShowActivity","Main", new {ActivityId = Model.ActivityId, ProcessId = Model.ProcessId, UnitId = Model.UnitId })"> بازگشت </a>
</div>
